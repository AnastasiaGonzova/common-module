<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create-tables" author="Gonza">
        <comment>
            Первоначальная структура базы данных
        </comment>

        <createTable tableName="debug">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" unique="true" primaryKeyName="pk_debug"/>
            </column>
            <column name="system_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="params" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="exception">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" unique="true" primaryKeyName="pk_debug"/>
            </column>
            <column name="system_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="params" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>